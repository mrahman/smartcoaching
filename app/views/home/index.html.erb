<style type="text/css">
.container {
   max-width: 960px;
}

.row {
  display: flex;
  flex-wrap: wrap;
}

.card {
  position: relative;
  display: flex;
  min-width: 0;
}

.card-body {
  width: 250px;
  display: block;
  flex: 1 1 auto;
}
.card-image {
  width: 160px;
  height: 220px;
  float: left;
  clear: right;
}
.card-image img {
  width: 160px;
  height: 220px;
  vertical-align: middle;
  border-style: none;
}

.card-text {
  display: block;
  margin-top: 225px;
}

.MuiPaper-elevation2-14 {
    box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.12);
}

.MuiPaper-rounded-11 {
    border-radius: 4px;
}
.MuiPaper-root-10 {
    background-color: #fff;
}
</style>
<h1>Online Coaching Management Systems</h1>

<%= link_to 'List of coaches', controller: 'coaches' %>
<%= link_to 'List of students', controller: 'students' %>

<h3>Suggested coaches</h3>

  <div class="container">
  <div class="row">
  <% @coaches.each do |coach| %>
    <div class="card MuiPaper-elevation2-1 MuiPaper-rounded-11 MuiPaper-root-10">
      <div class="card-body">
      <div class="card-image"><%= image_tag coach.avatar.url(:medium) %></div>
      <div class="card-text"><%= link_to [coach.first_name, coach.last_name].join(' '), coach_path(coach) %></div>
      </div>
    </div>
  <% end %>
  </div>
  </div>

<h3>Suggested Students</h3>
<div class="container">
  <div class="row">
  <% @students.each do |student| %>
    <div class="card">
      <div class="card-body">
      <div class="card-image"><%= image_tag student.avatar.url(:medium) %></div>
      <div class="card-text"><%= link_to [student.first_name, student.last_name].join(' '), student_path(student) %></div>
      </div>
    </div>
  <% end %>
  </div>
</div>
